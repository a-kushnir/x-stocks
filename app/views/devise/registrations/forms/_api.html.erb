<div class="section section-form section-form-left">
  <h2><%= t('account.pages.api_key') %></h2>

  <%= form_for(resource, as: resource_name, url: users_apis_path, html: { method: :post }) do |f| %>
    <div class="pb-3 relative flex w-full" data-controller="clipboard">
      <%= f.text_field :api_key, readonly: true, data: { clipboard_target: 'input' }, class: 'shadow-sm appearance-none border rounded-l w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-200' %>
      <div class="">
        <label for="copy_api_key" class="sr-only">Copy API Key</label>
        <button id="copy_api_key" type="button" data-action="click->clipboard#copy" class="btn border border-l-0 border-gray-600 px-2 rounded-none rounded-r">
          <%= inline_svg('svg/content-copy.svg', size: '22*22') %>
        </button>
      </div>
    </div>

    <div class="pb-3 flex items-center justify-between">
      <a href="/api_docs" class="btn btn-primary" target="_blank">API Documentation</a>
      <%= f.submit 'Regenerate', class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
