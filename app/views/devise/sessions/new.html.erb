<% @page_title = 'Sign In' %>
<div class="w-full max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h2 class="uppercase mb-3 font-normal">Sign in</h2>
<%= form_for(resource, as: resource_name, url: user_session_path(back_url: params[:back_url])) do |f| %>

  <div class="mb-4">
    <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'shadow-sm appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'shadow-sm appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4">
      <%= f.label :remember_me, class: 'block text-gray-700 text-sm font-bold mb-2' do %>
        <%= f.check_box :remember_me, class: 'mr-2 leading-tight' %>Remember Me
      <% end %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Sign in", class: 'btn2 btn2-primary' %>
  </div>
<% end %>
</div>
