<% content_for :page_title do %>
  <header class="navbar navbar-expand navbar-dark flex-column flex-md-row bd-navbar justify-content-center" style="margin-left: 132px;">
  </header>
<% end %>

<div class="row">
  <div class="col-lg-6 col-xl-5 text-center">
    <%= render partial: 'fear_n_greed' %>
    <div class="text-center d-none d-md-block">
      <%= render partial: 'div_hikes_n_cuts' %>
    </div>
  </div>
  <div class="col-lg-6 col-xl-2">
    <%= render partial: 'portfolio' %>
    <%= render partial: 'top_movers', locals: { title: 'Top Gainers', where: 'price_change_pct > 0', order: 'desc' } %>
    <%= render partial: 'top_movers', locals: { title: 'Top Losers', where: 'price_change_pct < 0', order: 'asc' } %>
    <div class="text-center d-block d-md-none">
      <%= render partial: 'div_hikes_n_cuts' %>
    </div>
  </div>
  <div class="col-lg-6 col-xl-3">
    <h3>Market Overview</h3>
    <%= render partial: 'market' %>
  </div>
  <div class="col-lg-6 col-xl-2">
    <%= render partial: 'links' %>
    <%= render partial: 'screeners' %>
  </div>
</div>
