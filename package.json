    "@babel/preset-env": "^7.11.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.0.2",
    "babel-plugin-macros": "^3.1.0",
    "esbuild": "^0.14.14",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-watch": "^8.0.0",
    "prettier": "^2.0.2"
  }
