    "@rails/ujs": "^6.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "chart.js": "^2.9.4",
    "chartjs-plugin-datalabels": "^0.7.0",
    "glob": "^7.2.0",
    "path": "^0.12.7",
    "postcss": "^8.4.8",
    "postcss-cli": "^9.1.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^7.4.2",
    "tailwindcss": "^3.0.23"
  },
